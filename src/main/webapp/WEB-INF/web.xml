<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Proximity Placesâ„¢</display-name>

	<!-- Request Factory Servlet -->
	<servlet>
		<servlet-name>requestFactoryServlet</servlet-name>
		<servlet-class>com.google.web.bindery.requestfactory.server.RequestFactoryServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>requestFactoryServlet</servlet-name>
		<url-pattern>/rf</url-pattern>
	</servlet-mapping>

	<!-- GWT RPC Servlet -->
	<servlet>
		<servlet-name>rpcServlet</servlet-name>
		<servlet-class>com.candor.interview_project_bogdan.server.rpc.RpcServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>rpcServlet</servlet-name>
		<url-pattern>/ProximityPlaces/rpc</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>proximity-places.html</welcome-file>
	</welcome-file-list>

	<!-- Session will never expire -->
	<session-config>
		<session-timeout>-1</session-timeout>
	</session-config>

</web-app>
